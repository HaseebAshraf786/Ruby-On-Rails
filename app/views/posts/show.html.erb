<div  style="margin:0% 10% 0% 10%;padding:5px 0px 5px 0px;">
    <% @posts.each do |post|%>
        <%if post.progress == 'completed'%>
        <div style = "margin:0% 10% 0% 10%; border:2px solid green;margin-top:5px;padding:10px;background-color: #d5dbdb ;">
            
            <h4>Description</h4>
            <%= post.description%><br>
            <h4>Reruirement</h4>
            <%= post.requirement%><br>
            <h4>Budget</h4>
            <%= post.budget%>$<br>
            <h4> Rating</h4>
            <%= post.rate%>
        </div>
        <%end%>
    <%end%>
</div>